<li>
    {{ 'oro.ui.created_at'|trans }}:
    {{ entity.createdAt ? entity.createdAt|oro_format_datetime : 'N/A'|trans }}
    {% if entity.createdBy %}
        {% if resource_granted('oro_user_user_view') %}
            <a href="{{ path('oro_user_view', {'id': entity.createdBy.id}) }}">{{ entity.createdBy|oro_format_name|escape }}</a>
        {% else %}
            {{ entity.createdBy|oro_format_name|escape }}
        {% endif %}
    {% endif %}
</li>
