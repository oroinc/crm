{% extends 'OroUIBundle:actions:view.html.twig' %}
{% import 'OroUIBundle::macros.html.twig' as UI %}
{% import 'OroDataGridBundle::macros.html.twig' as dataGrid %}
{% oro_title_set({params : {"%report.name%": entity.name} }) %}
{% set gridName = 'oro_report_table_' ~ entity.id %}
{% set pageTitle = entity.name %}

{% block navButtons %}
    {% if resource_granted('orocrm_report_update') %}
        {{ UI.button({
            'path': path('orocrm_report_update', {'id': entity.id}),
            'iClass': 'icon-edit',
            'title': 'Edit report'|trans,
            'label': 'Edit'|trans
        }) }}
    {% endif %}
    {% if resource_granted('orocrm_report_delete') %}
        {{ UI.deleteButton({
                'dataUrl': path('oro_api_delete_report', {'id': entity.id}),
                'dataRedirect': path('orocrm_report_index'),
                'aCss': 'no-hash remove-button',
                'dataId': entity.id,
                'id': 'btn-remove-report',
                'dataMessage': 'Are you sure you want to delete this report?'|trans,
                'successMessage': 'Report deleted'|trans,
                'title': 'Delete report'|trans,
                'label': 'Delete'|trans
            })
        }}
    {% endif %}
{% endblock navButtons %}

{% block pageHeader %}
    {% set breadcrumbs = {
        'entity': entity,
        'indexPath': path('orocrm_report_index'),
        'indexLabel': 'Reports'|trans,
        'entityTitle': entity.name
    } %}
    {{ parent() }}
{% endblock pageHeader %}

{% block content_data %}
    {{ dataGrid.renderGrid(gridName) }}
{% endblock content_data %}
