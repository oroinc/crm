{% import 'OroUserBundle::macros.html.twig' as macros %}
{% form_theme form with 'OroUIBundle:Form:fields.html.twig' %}

{% set title = form.vars.value.id ? 'Edit address' : 'Add address' %}

<div class="container-fluid">
    <form action="{{ submitUrl }}" {{ form_enctype(form) }} method="post">
        <div class="navigation clearfix navbar-extra navbar-extra-right">
            <div class="row">
                <div class="pull-left">
                    <div class="well-small">
                        <div class="customer-content">
                            <h1 class="address-title">{{ form.vars.value.id ? 'Edit Address' : 'New Address' }}</h1>
                            <ul class="inline">
                                <li>{{ 'Created'|trans }}
                                    : {{ form.vars.value.createdAt ? macros.time(form.vars.value.createdAt) : 'N/A' }}</li>
                                <li>{{ 'Updated'|trans }}
                                    : {{ form.vars.value.updatedAt ? macros.time(form.vars.value.updatedAt) : 'N/A' }}</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="layout-content">
            <div id="navbarExample" class="navbar navbar-static scrollspy-nav">
                <div class="navbar-inner">
                    <div class="container-fluid" style="width: auto;">
                        <ul class="nav">
                            <li class="active"><a href="#scroll-main">{{ 'Overview'|trans }}</a></li>
                            {% if form.values is defined %}
                                <li><a href="#scroll-attributes">{{ 'Additional data'|trans }}</a></li>
                            {% endif %}
                        </ul>
                    </div>
                </div>
            </div>
            <div class="clearfix-oro">
                <div class="customer-info-actions container-fluid well-small">
                    <div class="pull-right">
                        <button type="submit" class="btn btn-primary">{{ 'Save'|trans }}</button>
                    </div>
                    {% if form_errors(form) %}
                        <div class="pull-left alert alert-error">
                            <button class="close" type="button" data-dismiss="alert">Ã—</button>
                            {{ form_errors(form) }}
                        </div>
                    {% endif %}
                </div>
                <div data-spy="scroll" data-target="#navbarExample" data-offset="50" class="scrollspy container-fluid">
                    <h4 id="scroll-main" class="scrollspy-title">{{ 'Overview'|trans }}</h4>

                    <div class="row-fluid">
                        <fieldset class="form-horizontal span6">
                            {{ form_row(form.street) }}
                            {{ form_row(form.street2) }}
                            {{ form_row(form.country, {'attr': {'class': 'country-select', 'data-url': url('oro_api_country_get_regions', {id: 'country_id'})}}
                            ) }}
                            {% include 'OroAddressBundle:Region:_element.html.twig' with ({form: form.state}) %}
                            {{ form_row(form.city) }}
                            {{ form_row(form.postalCode) }}
                            {{ form_row(form.mark) }}
                        </fieldset>
                    </div>

                    {% if form.values is defined %}
                        <h4 id="scroll-attributes" class="scrollspy-title">{{ 'Additional data'|trans }}</h4>
                        <div class="row-fluid">
                            <fieldset class="form-horizontal" id="attributes-list">
                                {{ form_row(form.values) }}
                            </fieldset>
                        </div>
                    {% endif %}

                    <div class="hide">
                        {{ form_rest(form) }}
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
